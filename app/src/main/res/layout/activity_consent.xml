<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="28dp">
    <TextView
        android:id="@+id/consent_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 이용 동의 처리"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"/>
    <View
        android:id="@+id/consent_content"
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:background="#f8f8f8"
        app:layout_constraintTop_toBottomOf="@+id/consent_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"/>
    <CheckBox
        android:id="@+id/consent_check1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@id/consent_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/consent_check1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수) 개인정보 이용에 동의합니다."
        android:textSize="13sp"
        android:textColor="#000000"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="9sp"
        app:layout_constraintStart_toEndOf="@id/consent_check1"
        app:layout_constraintTop_toTopOf="@id/consent_check1"
        app:layout_constraintBottom_toBottomOf="@id/consent_check1"
        android:layout_marginLeft="5dp" />
    <CheckBox
        android:id="@+id/consent_check2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@id/consent_check1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/consent_check2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(선택) 마케팅 이용에 동의합니다."
        android:textSize="13sp"
        android:textColor="#000000"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="9sp"
        app:layout_constraintStart_toEndOf="@id/consent_check2"
        app:layout_constraintTop_toTopOf="@id/consent_check2"
        app:layout_constraintBottom_toBottomOf="@id/consent_check2"
        android:layout_marginLeft="5dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/consent_next_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/shape_button_5r"
        android:backgroundTint="@color/main"
        android:text="로그인하기"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>